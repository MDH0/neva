def Main(start any) (stop any) {
    DayPrinter
    ---
    :start -> { Day::Friday -> dayPrinter:day }
    dayPrinter:sig -> :stop
}

type Day enum {
    Monday,
    Tuesday,
    Wednesday,
    Thursday,
    Friday,
    Saturday,
    Sunday
}

def DayPrinter(day Day) (sig) {
    Println
    ---
    :day -> println:data
    println:sig -> :sig
}